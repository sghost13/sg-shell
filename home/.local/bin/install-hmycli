#!/usr/bin/env bash

# https://docs.harmony.one/home/general/ecosystem/wallets/harmony-cli/download-setup

# Move to isntall dir
builtin cd $HOME/.local/bin

# Remove old files if they exhist
if [[ -f hmy ]] ; then /usr/bin/rm -rf hmy ; fi
if [[ -f hmycli ]] ; then /usr/bin/rm -rf hmycli ; fi

# Get binary
/usr/bin/curl --tlsv1.3 --proto =https -LO https://harmony.one/hmycli

# Rename binary
mv hmycli hmy

# Make binary executeable
chmod +x hmy
