# ----------------- colors
## Description :
## Easy to use, simple color wrappers with the echo/tput commands.

## Color Functions
red() {
  local red normal
  red="$(tput setaf 1)"
  normal="$(tput sgr0)"
  builtin echo -e "${red}${1}${normal}"
}
green() {
  local green normal
  green="$(tput setaf 2)"
  normal="$(tput sgr0)"
  builtin echo -e "${green}${1}${normal}"
}
yellow() {
  local yellow normal
  yellow="$(tput setaf 3)"
  normal="$(tput sgr0)"
  builtin echo -e "${yellow}${1}${normal}"
}
blue() {
  local blue normal
  blue="$(tput setaf 4)"
  normal="$(tput sgr0)"
  builtin echo -e "${blue}${1}${normal}"
}
magenta() {
  local magenta normal
  magenta="$(tput setaf 5)"
  normal="$(tput sgr0)"
  builtin echo -e "${magenta}${1}${normal}"
}
cyan() {
  local cyan normal
  cyan="$(tput setaf 6)"
  normal="$(tput sgr0)"
  builtin echo -e "${cyan}${1}${normal}"
}
white() {
  local white normal
  white="$(tput setaf 7)"
  normal="$(tput sgr0)"
  builtin echo -e "${white}${1}${normal}"
}
grey() {
  local grey normal
  grey="$(tput setaf 8)"
  normal="$(tput sgr0)"
  builtin echo -e "${grey}${1}${normal}"
}
