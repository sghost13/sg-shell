# ----------------- colors
## Description :
## Easy to use, simple color wrappers for the echo/tput commands.

#BOLD="$(tput bold)"
#UNDERLINE="$(tput sgr 0 1)"
#BLINK="$(tput blink)"
#INVERT="$(tput sgr 1 0)"

## Color Functions
red() {
    local RED NORMAL
    RED="$(tput setaf 1)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${RED}$1${NORMAL}"
}
green() {
    local GREEN NORMAL
    GREEN="$(tput setaf 2)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${GREEN}$1${NORMAL}"
}
yellow() {
    local YELLOW NORMAL
    YELLOW="$(tput setaf 3)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${YELLOW}$1${NORMAL}"
}
blue() {
    local BLUE NORMAL
    BLUE="$(tput setaf 4)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${BLUE}$1${NORMAL}"
}
magenta() {
    local MAGENTA NORMAL
    MAGENTA="$(tput setaf 5)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${MAGENTA}$1${NORMAL}"
}
cyan() {
    local CYAN NORMAL
    CYAN="$(tput setaf 6)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${CYAN}$1${NORMAL}"
}
white() {
    local WHITE NORMAL
    WHITE="$(tput setaf 7)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${WHITE}$1${NORMAL}"
}
grey() {
    local GREY NORMAL
    GREY="$(tput setaf 8)"
    NORMAL="$(tput sgr0)"
    builtin echo -e "${GREY}$1${NORMAL}"
}
